<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:visibility="invisible" />
    <RelativeLayout
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:background="@color/semi_transparent_black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.4"
                android:scaleType="fitXY"
                android:visibility="invisible"
                android:id="@+id/card_background"
                android:adjustViewBounds="true"/>
            <FrameLayout
                android:id="@+id/card_top_bar"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/card_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="any time"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/indica_sativa_ratio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="10/20"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:padding="10dp" />

            </FrameLayout>

            <TextView
                android:layout_below="@id/card_top_bar"
                android:id="@+id/card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_40"
                android:text="Blue Dream"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="5dp" />

            <ImageView
                android:layout_below="@id/card_name"
                android:id="@+id/card_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/blue_dream"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:layout_below="@id/card_logo"
                android:id="@+id/card_info_bar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/semi_transparent_black">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/card_flavor_icon"
                    android:layout_weight="0.25"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/card_flavor"
                    android:text="berry"
                    android:textAllCaps="true"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_weight=".75"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/card_effect_icon"
                    android:layout_weight="0.25"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/card_effect"
                    android:text="calm"
                    android:textAllCaps="true"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_weight=".75"
                    android:gravity="center" />
            </LinearLayout>
            <TextView
                android:id="@+id/card_description"
                android:layout_below="@id/card_info_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/semi_transparent_black"
                android:text="ANYTHING"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:layout_weight=".75"
                android:gravity="center" />


        </RelativeLayout>

</LinearLayout>